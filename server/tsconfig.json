{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,

    "lib": ["ESNext"]
  },
  "include": ["./src"]
}